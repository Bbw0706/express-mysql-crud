<!DOCTYPE html>
<html>
  <%- include('../layout/header'); -%>
  <body>
    <div class="container">
      <div class="d-flex flex-column align-items-center">
        <div class="card create-post-form-container mx-auto rounded shadow-sm">
          <header class="mb-3 text-center">
          <h4>Create post</h4>
          </header>
          <form action="http://localhost:3000/posts/store" method="POST">
            <div class="form-group">
              <label>Title</label>
              <input class="form-control mb-3" name="title" type="text" />
            </div>
            <div class="form-group">
              <label>Content</label>
              <textarea name="content" class="form-control"> </textarea>
            </div>
            <div class="form-group d-flex justify-content-between w-100 mt-5">
              <input
                class="btn btn-success w-25 mx-auto"
                type="submit"
                value="save"
              />
            </div>
          </form>
        </div>
        <div class="mt-5">
          <a href="http://localhost:3000/posts" class="btn btn-outline-danger btn-lg">
            back
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
