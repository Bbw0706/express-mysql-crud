<!DOCTYPE html>
<html>
  <%- include('../layout/header'); -%>
  <body>
    <div class="container d-flex justify-content-center">
      <%if (posts.length > 0) {%>
      <ul class="post-wrapper">
        <!-- render list of posts -->
        <% posts.forEach((post) => { %>
        <li class="post-item-list">
          <a href="<%= `http://localhost:3000/posts/${post.id}` %> ">
            <div class="post-item card">
              <h5 class="text">
                <%= post.title %>
              </h5>
            </div>
          </a>
        </li>

        <% }); %> <%if (posts.length < 1) {%> <% } %>
      </ul>

      <!-- render when post not found -->
      <% } else { %>

      <h3>No post found</h3>

      <% } %>
    </div>
    <div class="d-flex justify-content-center">
      <button onclick="redirect()" class="btn btn-primary">
        create
      </button>
    </div>
  </body>
  <script>
    function redirect() {
      console.log('clicked');
      window.location = 'http://localhost:3000/posts/create';
    }
  </script>
</html>
