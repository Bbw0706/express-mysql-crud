<!DOCTYPE html>
<html>
  <%- include('../layout/header'); -%>

  <body>
    <div class="container">
      <h4 class="text-center"><%= title %></h4>
      <div class="d-flex align-items-center justify-content-center">
        <div class="login-form shadow-sm">
          <form action="http://localhost:3000/users/login" method="post">
            <div class="form-group">
              <label>Username</label>
              <input class="form-control" type="text" name="username" value="asad" />
            </div>
            <div class="form-group">
              <label>Password</label>
              <input class="form-control shadow-sm" type="password" name="password" value="password1" />
            </div>
            <div class="d-flex flex-column">
              <button
                class="btn btn-outline-info text-capitalize w-100 my-3"
                type="submit"
              >
                Sign in
              </button>
            </div>
            <div class="mt-4 align-self-end">
              Don't have an account? sign up
              <a href="http://localhost:3000/signup">here</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
